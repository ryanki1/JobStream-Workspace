{
  "name": "ml-service",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/ml-service",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "python3 -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
        "cwd": "apps/ml-service",
        "color": true
      },
      "configurations": {
        "production": {
          "command": "python3 -m uvicorn main:app --host 0.0.0.0 --port 8000 --workers 4"
        }
      }
    },
    "serve:docker": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose -f apps/ml-service/docker-compose.yml up",
        "cwd": ".",
        "color": true
      }
    },
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pip install -r requirements.txt",
        "cwd": "apps/ml-service",
        "color": true
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "python3 -m pytest tests/",
        "cwd": "apps/ml-service",
        "color": true
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pylint services/ main.py",
        "cwd": "apps/ml-service",
        "color": true
      }
    }
  },
  "tags": ["type:service", "platform:python", "scope:ml"]
}
